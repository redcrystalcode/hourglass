<div class="container__hero project-header">
	<div class="hero__content hero__content--overlay-colored">
		<h2 class="hero__title project-header__name">
			{{name}}
		</h2>
		<h3 class="project-header__info">
			{{note}}
		</h3>
		<div class="project-header__action-bar">
			<div class="project-header__tabs">
				<button class="mdl-button mdl-js-button mdl-js-ripple-effect">Overview</button>
				<button class="is-active mdl-button mdl-js-button mdl-js-ripple-effect">Items</button>
				<button class="mdl-button mdl-js-button mdl-js-ripple-effect">Lists</button>
			</div>
			<div class="project-header__actions">
				<button class="mdl-button mdl-js-button mdl-button--icon mdl-js-ripple-effect"><i class="material-icons">edit</i></button>
				<button class="mdl-button mdl-js-button mdl-button--icon mdl-js-ripple-effect"><i class="material-icons">more_vert</i></button>
			</div>
		</div>
	</div>
</div>
