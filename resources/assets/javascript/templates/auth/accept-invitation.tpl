<div class="container container--with-ribbon">
	<div class="container__ribbon"></div>
	<main class="main-content">
		<div class="mdl-grid">
			<div class="mdl-cell mdl-cell--4-col-desktop mdl-cell--4-offset-desktop mdl-cell--6-col-tablet mdl-cell--1-offset-tablet">
				<div class="register-card card card--animate-in card--4dp">
					<h2 class="card__title card__title--xl">You've been invited to Furnish.</h2>
					<p>Fill out the form below to continue.</p>

					<form class="register-form">
						<div class="mdl-textfield mdl-textfield--floating-label mdl-textfield--full-width mdl-js-textfield">
							<input class="mdl-textfield__input" type="text" id="name" name="name" tabindex="1" autofocus>
							<label class="mdl-textfield__label" for="name">Full Name</label>
						</div>
						<div class="mdl-textfield mdl-textfield--floating-label mdl-textfield--full-width mdl-js-textfield">
							<input class="mdl-textfield__input" type="email" id="email" name="email" tabindex="2" autofocus>
							<label class="mdl-textfield__label" for="email">Email</label>
						</div>
						<div class="mdl-textfield mdl-textfield--floating-label mdl-textfield--full-width mdl-js-textfield">
							<input class="mdl-textfield__input" type="password" id="password" name="password" tabindex="3">
							<label class="mdl-textfield__label" for="password">Password</label>
						</div>
						<div class="mdl-textfield mdl-textfield--floating-label mdl-textfield--full-width mdl-js-textfield">
							<input class="mdl-textfield__input" type="password" id="password_confirmation" name="password_confirmation" tabindex="4">
							<label class="mdl-textfield__label" for="password_confirmation">Confirm Password</label>
						</div>

						<div class="text-right">
							<input tabindex="5"
							       type="submit"
							       value="Join"
							       class="mdl-button mdl-button--accent mdl-js-button mdl-js-ripple-effect"
							/>
						</div>
					</form>
				</div>
			</div>
		</div>
	</main>
</div>
