<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Hourglass\Entities\User" table="users">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="account_id" type="integer" column="account_id" />
        <field name="name" type="string" />
        <field name="role" type="string" />
        <field name="username" type="string" unique="true" />
        <field name="email" type="string" unique="true" />
        <field name="password" type="string" />
        <field name="timezone" type="string" />
        <field name="rememberToken" type="string" nullable="true" column="remember_token" />
        <field name="createdAt" type="datetime" nullable="true" column="created_at" />
        <field name="updatedAt" type="datetime" nullable="true" column="updated_at" />
    </entity>
</doctrine-mapping>
