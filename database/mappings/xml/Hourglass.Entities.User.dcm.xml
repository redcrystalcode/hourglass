<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd"
                  xmlns:gedmo="http://Atlantic18.github.io/DoctrineExtensions/schemas/orm/doctrine-extensions-3.0.xsd">
    <entity name="Hourglass\Entities\User" table="users">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="name" type="string" />
        <field name="role" type="string" />
        <field name="username" type="string" unique="true" />
        <field name="email" type="string" unique="true" />
        <field name="password" type="string" />
        <field name="timezone" type="string" />
        <field name="rememberToken" type="string" nullable="true" column="remember_token" />
        <field name="createdAt" type="datetime_immutable" nullable="true" column="created_at">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime_immutable" nullable="true" column="updated_at">
            <gedmo:timestampable on="update"/>
        </field>
        <many-to-one target-entity="Hourglass\Entities\Account" field="account">
            <join-column name="account_id" referenced-column-name="id" />
        </many-to-one>
    </entity>
</doctrine-mapping>
