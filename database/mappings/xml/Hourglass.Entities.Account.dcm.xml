<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd"
                  xmlns:gedmo="http://Atlantic18.github.io/DoctrineExtensions/schemas/orm/doctrine-extensions-3.0.xsd">
    <entity name="Hourglass\Entities\Account" table="accounts">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="name" type="string" />
        <field name="timezone" type="string" />
        <field name="createdAt" type="datetime_immutable" nullable="true" column="created_at">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime_immutable" nullable="true" column="updated_at">
            <gedmo:timestampable on="update"/>
        </field>
        <one-to-many target-entity="Hourglass\Entities\User" mapped-by="account" field="users" />
    </entity>
</doctrine-mapping>
